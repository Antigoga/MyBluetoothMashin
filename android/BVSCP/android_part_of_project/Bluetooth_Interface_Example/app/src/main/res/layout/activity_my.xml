<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MyActivity">

    <Button
        android:id="@+id/connect_bt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@color/colorPrimary"
        android:onClick="сonnect"
        android:text="@string/connect"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/rigth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/forward"
        android:layout_toEndOf="@+id/forward"
        android:layout_toRightOf="@+id/forward"
        android:background="@drawable/rigth" />

    <Button
        android:id="@+id/forward"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/up" />

    <Button
        android:id="@+id/ef"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/forward"
        android:layout_toLeftOf="@+id/forward"
        android:layout_toStartOf="@+id/forward"
        android:background="@drawable/left" />

    <Button
        android:id="@+id/backgo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ef"
        android:layout_toEndOf="@+id/ef"
        android:layout_toRightOf="@+id/ef"
        android:background="@drawable/backgo"
        android:visibility="visible" />

    <Button
        android:id="@+id/blockRulButtom"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ef"
        android:layout_alignStart="@+id/ef"
        android:layout_alignTop="@+id/connect_bt"
        android:background="@drawable/blockrultrue" />

    <Button
        android:id="@+id/parkingButtom"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/connect_bt"
        android:layout_alignEnd="@+id/rigth"
        android:layout_alignRight="@+id/rigth"
        android:background="@drawable/parkingtrue" />


</RelativeLayout>

